/* pages/result/result.wxss */
.result-container {
  height: 100vh;
  background: linear-gradient(135deg, #eecdae, #dcd0eb);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}

.result-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  width: 100%;
  margin-bottom: 120rpx;
}

/* 标题样式 */
.result-title {
  font-size: 64rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 80rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  padding: 0 40rpx;
}

/* 图片区域样式 */
.image-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx;
  margin-bottom: 80rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  transition: all 0.3s ease;
  position: relative;
}

.image-section::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  background: linear-gradient(135deg, #a372a5, #FFF9C4);
  border-radius: 32rpx;
  z-index: -1;
  opacity: 0.6;
  filter: blur(10rpx);
}

.image-section:active {
  transform: scale(0.98);
}

.result-image {
  width: 270rpx;
  height: 270rpx;
  border-radius: 16rpx;
}

/* 文案样式 */
.result-text {
  font-size: 54rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  line-height: 1.6;
  padding: 0 40rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  position: relative;
}

.result-text::before,
.result-text::after {
  content: '✨';
  margin: 0 16rpx;
  font-size: 24rpx;
}

/* 返回按钮区域 */
.action-section {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
}

.back-home-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  border-radius: 50rpx;
  padding: 24rpx 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255,107,107,0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.back-home-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

.back-home-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.6);
}

.back-home-btn:active::before {
  left: 100%;
}

/* 添加一些动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-title {
  animation: fadeInUp 0.6s ease 0.1s both;
}

.image-section {
  animation: fadeInUp 0.6s ease 0.3s both;
}

.result-text {
  animation: fadeInUp 0.6s ease 0.5s both;
}

.action-section {
  animation: fadeInUp 0.6s ease 0.7s both;
}