/* pages/order/order.wxss */
.order-container {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  position: relative;
}

.order-content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 底部结算栏 */
.order-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.bottom-placeholder {
  width: 100%;
}

/* 菜品列表样式 */
.dishes-list {
  margin-bottom: 20rpx;
}

.order-dish-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.order-dish-item:active {
  transform: scale(0.98);
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 140rpx;
}

.dish-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.dish-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.quantity-control {
  display: flex;
  width: 180rpx;
  align-items: center;
  gap: 16rpx;
}

.btn-minus, .btn-plus {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #ff6b6b;
  background: white;
  color: #ff6b6b;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: all 0.2s ease;
}

.btn-minus:active, .btn-plus:active {
  background: #ff6b6b;
  color: white;
}

.quantity {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  min-width: 48rpx;
  text-align: center;
}

/* 空状态样式 */
.empty-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.order-btn {
  background: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
}

/* 结算栏样式 */
.total-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.total-count {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.checkout-btn {
  background: #ff6b6b;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  min-width: 120rpx;
  margin-right: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
  transition: all 0.2s ease;
}

.checkout-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 优化后的弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-content {
  width: 100%;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 48rpx 40rpx;
  box-sizing: border-box;
  transform: translateY(0);
  animation: slideUp 0.3s ease;
  max-height: 80vh;
  overflow-y: auto;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #999;
  display: block;
}

.modal-body {
  margin-bottom: 48rpx;
}

.form-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}

.form-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

/* 头像上传样式 */
.avatar-upload-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  width: auto;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-upload-btn::after {
  border: none;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  opacity: 0.6;
}

.avatar-text {
  font-size: 20rpx;
  color: #999;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx;
  text-align: center;
}

.camera-icon {
  font-size: 24rpx;
  color: white;
}

/* 输入框样式 */
.input-container {
  position: relative;
  display: flex;
  align-items: center;
}

.nickname-input {
  flex: 1;
  height: 88rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  text-align: center; /* 添加这一行 */
}

.nickname-input:focus {
  border-color: #ff6b6b;
  background: white;
  text-align: center; /* 聚焦时也保持居中 */
}

.input-placeholder {
  color: #ccc;
  font-size: 28rpx;
  text-align: center; /* placeholder 也居中 */
}

.input-clear {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  font-size: 32rpx;
  color: #999;
  font-weight: 300;
  line-height: 1;
}

/* 底部按钮样式 */
.modal-footer {
  display: flex;
  gap: 20rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
  line-height: 88rpx; /* 添加行高，与高度相同 */
  padding: 0; /* 清除默认内边距 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-cancel:active {
  background: #e0e0e0;
}

.btn-confirm {
  background: #ff6b6b;
  color: white;
}

.btn-confirm:disabled {
  background: #ccc;
  color: #999;
}

.btn-confirm:active:not(:disabled) {
  background: #e55a5a;
  transform: scale(0.98);
}