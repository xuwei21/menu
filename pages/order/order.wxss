/* pages/order/order.wxss */
.order-container {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
  position: relative;
}

.order-content {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 底部结算栏优化 - 改为固定定位 */
.order-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.05);
  z-index: 100;
}

/* 底部占位符 */
.bottom-placeholder {
  width: 100%;
}

/* 其他样式保持不变 */
.dishes-list {
  margin-bottom: 20rpx;
}

.order-dish-item {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.order-dish-item:active {
  transform: scale(0.98);
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.dish-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 140rpx;
}

.dish-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.dish-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.quantity-control {
  display: flex;
  width: 180rpx;
  align-items: center;
  gap: 16rpx;
}

.btn-minus, .btn-plus {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #ff6b6b;
  background: white;
  color: #ff6b6b;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: all 0.2s ease;
}

.btn-minus:active, .btn-plus:active {
  background: #ff6b6b;
  color: white;
}

.quantity {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  min-width: 48rpx;
  text-align: center;
}

.empty-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.order-btn {
  background: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
}

.total-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.total-count {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.checkout-btn {
  background: #ff6b6b;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  min-width: 120rpx;
  margin-right: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
  transition: all 0.2s ease;
}

.checkout-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}