/* pages/order/orderlist.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFF9F9 100%);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 页面标题区域 */
.header {
  padding: 60rpx 40rpx 30rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" opacity="0.1"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="2"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
}

.title {
  font-size: 52rpx;
  font-weight: 800;
  color: white;
  text-align: center;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

/* 订单列表区域 */
.order-list {
  flex: 1;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
  padding: 0 40rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 50rpx;
  opacity: 0.7;
  filter: grayscale(0.3);
}

.empty-text {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.go-menu-btn {
  background: linear-gradient(45deg, #FF6B6B, #FF8E8E);
  color: white;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.go-menu-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.go-menu-btn:active::before {
  left: 100%;
}

.go-menu-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.4);
}

/* 订单项样式 */
.order-item {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
}

.order-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF6B6B, #FF8E8E);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.order-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-color: rgba(255, 107, 107, 0.1);
}

.order-item:active::before {
  opacity: 1;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 28rpx;
  padding-bottom: 28rpx;
  border-bottom: 2rpx solid #F8F8F8;
  position: relative;
}

.customer-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
}

.order-time {
  font-size: 26rpx;
  color: #888;
  background: #FFF5F5;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.dishes-list {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.dishes-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  flex-shrink: 0;
  margin-right: 16rpx;
  background: linear-gradient(45deg, #FF6B6B, #FF8E8E);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.dishes-names {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
  word-break: break-all;
}

/* 加载动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.order-item {
  animation: fadeInUp 0.5s ease forwards;
}

.order-item:nth-child(odd) {
  animation-delay: 0.1s;
}

.order-item:nth-child(even) {
  animation-delay: 0.2s;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .header {
    padding: 50rpx 30rpx 25rpx;
  }
  
  .title {
    font-size: 46rpx;
  }
  
  .order-list {
    padding: 30rpx 20rpx;
  }
  
  .order-item {
    padding: 30rpx;
  }
  
  .customer-name {
    font-size: 32rpx;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  .order-item {
    background: #2d2d2d;
    box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.3);
  }
  
  .customer-name {
    color: #fff;
  }
  
  .dishes-names {
    color: #e0e0e0;
  }
  
  .empty-text {
    color: #ccc;
  }
  
  .empty-desc {
    color: #999;
  }
}