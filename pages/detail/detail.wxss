/* pages/detail/detail.wxss */
.container {
    min-height: 100vh;
    background: #fff;
    box-sizing: border-box;
  }
  
  .back-btn {
    position: fixed;
    top: 80rpx; /* 下移避免与系统状态栏重叠 */
    left: 30rpx;
    width: 80rpx;
    height: 80rpx;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    box-sizing: border-box;
  }
  
  .back-icon {
    color: white;
    font-size: 40rpx;
    font-weight: bold;
  }
  
  .image-section {
    width: 100%;
    height: 600rpx;
    box-sizing: border-box;
  }
  
  .detail-image {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
  
  .info-section {
    padding: 40rpx;
    box-sizing: border-box;
    text-align: left; /* 确保左对齐 */
  }
  
  .dish-name {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 20rpx;
    text-align: left; /* 左对齐 */
  }
  
  .dish-desc {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    display: block;
    margin-bottom: 30rpx;
    text-align: left; /* 左对齐 */
  }
  
  .dish-price {
    font-size: 36rpx;
    color: #FF6B6B;
    font-weight: bold;
    display: block;
    text-align: left; /* 左对齐 */
  }
  
  /* 为所有元素添加基础盒模型 */
  view, text, image {
    box-sizing: border-box;
  }